<MainWidget>:
    orientation: 'vertical'
    text_label: text
    btn_start: start
    btn_reminder: reminder
    btn_contacts: contacts
    btn_instruction: instruction
    btn_cleaner: cleaner
    btn_finish: finish
    btn_bookmarks: bookmarks
    scroll: scroll

    Button:
        id: start
        text: 'Старт'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_start()

    Button:
        id: reminder
        text: 'Заметки'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_reminder()

    Button:
        id: contacts
        text: 'Телефонная книжка'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_contacts()

    Button:
        id: instruction
        text: 'Инструкция'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_instruction()

    Button:
        id: bookmarks
        text: 'Google закладки'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_googlemarks()

    Button:
        id: cleaner
        text: 'Назад'
        background_color: [0,0,1,1]
        font_size: 18
        size: (0, 0)
        size_hint: (None, None)
        on_press: root.on_press_button_cleaner()

    Button:
        id: finish
        text: 'Конец'
        background_color: [0,0,1,1]
        font_size: 18
        size: (400, 100)
        size_hint: (None, None)
        on_press: root.on_press_button_finish()

    ScrollView:
        id: scroll
        do_scroll_x: False
        do_scroll_y: True
        bar_width: 20
        scroll_timeout: 100
        scroll_type: ['bars','content']

        Label:
            id: text
            size_hint_y: 1.2
            height: self.texture_size[1]
            valign: 'top'
            halign: 'center'
            font_size: 18
            padding: (0, 100)
            text_size: (400, 1000)
